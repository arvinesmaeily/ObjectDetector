<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObjectDetector.Pages.HistoryPage"
             Title="History">

    <Grid RowDefinitions="Auto,*" Padding="10">

        <VerticalStackLayout Grid.Row="0" Spacing="10" Padding="10">
            <Label Text="Detection History" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            <Button Text="🗑️ Clear History" 
                    Clicked="OnClearHistoryClicked"
                    BackgroundColor="#DC3545"
                    TextColor="White" />
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" 
                        x:Name="HistoryCollectionView"
                        Margin="10">
            <CollectionView.EmptyView>
                <Label Text="No detection history yet"
                       FontSize="16"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="Gray" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding Timestamp}" FontAttributes="Bold" />
                            <Label Text="{Binding DetectionCount}" />
                            <Label Text="{Binding Objects}" FontSize="12" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</ContentPage>
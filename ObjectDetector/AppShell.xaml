<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ObjectDetector.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ObjectDetector.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Object Detector">

    <TabBar>
        <ShellContent
            Title="Camera"
            ContentTemplate="{DataTemplate pages:CameraPage}"
            Route="CameraPage">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="SegoeFluent"
                    Glyph="&#xE722;" />
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Gallery"
            ContentTemplate="{DataTemplate pages:GalleryPage}"
            Route="GalleryPage">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="SegoeFluent"
                    Glyph="&#xE91B;" />
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate pages:SettingsPage}"
            Route="SettingsPage">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="SegoeFluent"
                    Glyph="&#xE713;" />
            </ShellContent.Icon>
        </ShellContent>
    </TabBar>

</Shell>
